<h1>LOG IN</h1>

<%= form_tag login_path do %><br>

	<%= label_tag 'e-Mail :'  %><br>
	<%= text_field_tag 'session[email]' %><br>

	<%= label_tag 'Password :' %><br>
	<%= text_field_tag 'session[password]' %><br>

	<%= label_tag :remember_me, class: 'users_path' do %>
			 <%= check_box_tag :remember_me %>
			 <span>Remember me on this computer</span>
		 <% end %>

	<%= submit_tag 'Log in' %><br>

<% end %><br>

    <p>New user? <%= link_to "Sign up here!", new_user_path %></p>
